{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "NodeNext",
    "esModuleInterop": true,
    "moduleResolution": "nodenext",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "skipLibCheck": true  // ✅ THIS FIXES THE TS INT32ARRAY ERROR
  },
  "compileOnSave": true,
  "include": ["src"],
  "exclude": ["../node_modules", "../src"] // ✅ AVOIDS REACT TYPES LEAKING IN
}
